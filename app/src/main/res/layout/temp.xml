<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/containerMaster">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/containerSuperHeading"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:id="@+id/textView_SuperText"
            android:textSize="@dimen/list_supertext"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/containerMain"
        android:background="?attr/selectableItemBackground">
        <!-- Image -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/containerImage"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/list_image"
                android:layout_width="@dimen/list_image"
                android:layout_height="@dimen/list_image"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:src="@drawable/profile_default"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="1dp" />
        </LinearLayout>
        <!-- Title and Subtitle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/containerMainText"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/list_padding"
                android:orientation="vertical"
                android:gravity="center">
                <com.nex3z.flowlayout.FlowLayout
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flChildSpacing="@dimen/standard_touch_space"
                    app:flChildSpacingForLastRow="align"
                    app:flRowSpacing="8dp"
                    android:gravity="bottom">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/list_titletext"
                        android:text="Subject"
                        android:textColor="@color/colorTextPrimary"
                        android:id="@+id/textView_TitleSubject"
                        android:layout_marginEnd="@dimen/standard_touch_space"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/list_titletext"
                        android:text="Text"
                        android:textColor="@color/colorTextPrimary"
                        android:id="@+id/textView_TitleText"
                        android:layout_marginEnd="@dimen/standard_touch_space" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/list_titletext"
                        android:text="Object"
                        android:textColor="@color/colorTextPrimary"
                        android:id="@+id/textView_TitleObject"
                        android:textStyle="bold" />
                </com.nex3z.flowlayout.FlowLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/list_subtext"
                    android:text="Testing Sub Text"
                    android:textColor="@color/colorTextSecondary"
                    android:id="@+id/textView_SubText"
                    />
            </LinearLayout>
        </LinearLayout>
        <!-- Date, Time-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/containerOtherInfo"
            android:orientation="vertical"
            android:padding="@dimen/standard_gap"
            android:layout_weight="1.5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/containerDateTime"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_Date"
                    android:text="01/01/18"
                    android:gravity="end|center"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    android:textSize="@dimen/list_othertext"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_Time"
                    android:text="12:00 AM"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:gravity="end|center"
                    android:textSize="@dimen/list_othertext"
                    android:layout_marginTop="@dimen/list_interspace"/>
            </LinearLayout>
        </LinearLayout>
        <!-- Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:padding="@dimen/standard_touch_space"
            android:gravity="center_horizontal"
            android:id="@+id/containerButton"
            android:visibility="gone">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/follow_button_follow"
                android:textSize="@dimen/list_subtext"
                android:background="@drawable/custom_button_yellow"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>