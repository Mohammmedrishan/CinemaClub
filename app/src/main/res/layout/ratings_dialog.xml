<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerMaster">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/containerHeader"
        android:padding="@dimen/standard_gap"
        android:gravity="center_horizontal"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/container_More"
            android:gravity="end">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_more"
                android:id="@+id/img_More" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/ratings_title_size"
            android:text="Aadu (Malayalam) (2D)"
            android:id="@+id/textView_Title"
            android:layout_marginTop="@dimen/standard_gap"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/ratings_subtitle"
            android:text="Comedy | Entertainment"
            android:id="@+id/textView_Subtitle"
            android:layout_marginTop="@dimen/standard_gap"
            android:layout_marginBottom="@dimen/standard_gap"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ratings_title_size"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginTop="@dimen/standard_gap"
            android:id="@+id/textView_UserRating"
            android:text="8/10"
            android:textStyle="bold"/>

        <RatingBar
            style="@style/CustomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="10"
            android:rating="4.5"
            android:id="@+id/rb_UserRating"
            android:stepSize="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ratings_subtitle"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginTop="@dimen/standard_gap"
            android:id="@+id/textView_TotalRating"
            android:text="8/10 from 35k Votes" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorTextDisabled"
            android:layout_marginTop="@dimen/standard_gap"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/containerTabs"
            android:orientation="horizontal"
            android:padding="@dimen/review_tab_padding"
            android:visibility="gone">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/textView_TabTop"
                android:text="@string/review_tab_top"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/review_tab_text_size"
                android:gravity="center_horizontal"
                android:textAllCaps="true" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/textView_TabFollowing"
                android:text="@string/review_tab_following"
                android:textColor="@color/colorTextSecondary"
                android:textSize="@dimen/review_tab_text_size"
                android:gravity="center_horizontal"
                android:textAllCaps="true" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/textView_TabAll"
                android:text="@string/review_tab_all"
                android:textColor="@color/colorTextSecondary"
                android:textSize="@dimen/review_tab_text_size"
                android:gravity="center_horizontal"
                android:textAllCaps="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/containerRecyclerView">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerView">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/containerPlaceholder"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/standard_gap"
            android:gravity="center_horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_show_nothing"
                android:textSize="@dimen/ratings_title_size"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSeparationLines"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="@dimen/standard_touch_space">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel"
            android:textAllCaps="false"
            android:text="@string/ratings_cancel"
            android:layout_weight="1"
            android:background="@android:color/transparent"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorSeparationLines"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubmit"
            android:text="@string/ratings_submit"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</LinearLayout>